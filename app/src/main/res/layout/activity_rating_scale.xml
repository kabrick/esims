            android:layout_height="0.3dp"
            android:layout_marginTop="10dp"
            android:background="@color/smoke_grey" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Frustration"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/frustration_subtext"
            android:textColor="@color/black_50"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                style="@style/lowScaleStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:background="@drawable/low_bg"
                android:text="Very Low"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/frustration_seekbar"
                android:layout_width="0dp"
