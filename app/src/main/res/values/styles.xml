<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/CustomTextAppearance</item>
    </style>

    <style name="CustomTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:typeface">normal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#107C36</item>
        <item name="android:borderlessButtonStyle">@color/colorAccent</item>
        <item name="android:textColorPrimary">#8C8C8C</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Material" parent="Theme.MaterialComponents.Light.DarkActionBar" />

    <style name="RadioGroupStyle">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:background">@drawable/radio_group_bg</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="RadioButtonStyle">
        <item name="android:background">@drawable/radio_states_bg</item>
        <item name="android:padding">5dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/radio_text</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MiddleRadioStyle">
        <item name="android:background">@drawable/radio_states_bg</item>
        <item name="android:padding">5dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/radio_text</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="KeyValuesStyle">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="lowScaleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="highScaleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="scoreStyle">
        <item name="android:textColor">@color/black_3</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
